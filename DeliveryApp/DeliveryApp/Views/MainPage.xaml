<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="DeliveryApp.MainPage" BackgroundColor="AntiqueWhite">

    <StackLayout>
        <Frame BackgroundColor="#2196F3" Padding="24" CornerRadius="0">
            <Label Text="Welcome to cool food delivery app!" HorizontalTextAlignment="Center" TextColor="White" FontSize="36"/>
        </Frame>

        <Button x:Name="TempLogInBtn" Text="Order Without logging in" Clicked="TempLogInBtn_clicked"></Button>
        <Button x:Name="LogInBtn" Text="Log in" Clicked="LogInbtn_clicked"></Button>
        <Button x:Name="SignUpBtn" Text="Sign Up"></Button>
    </StackLayout>

</ContentPage>

<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="DeliveryApp.Views.LogInPage">
    <ContentPage.Content>
        <StackLayout>
            <Grid BackgroundColor="Ivory">
                <Frame BackgroundColor="AliceBlue" Grid.Column="0" Grid.Row="0">
                    <Label Text="Welcome log in to Xamarin.Forms!" />
                </Frame>
                
                <Frame BackgroundColor="AntiqueWhite" Grid.Column="0" Grid.Row="1">
                <Entry BackgroundColor="AntiqueWhite" Placeholder="Enter your email" Text="{Binding Email}" ></Entry>
               
                </Frame>

                <Button Text="forgot password?" x:Name="forpass"></Button>
                <Button Text="Submit" x:Name="SUBMIT"></Button>
            </Grid>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>